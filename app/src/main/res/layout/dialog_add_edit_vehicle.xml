<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etVehicleId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID del vehículo (nickname)"
        android:inputType="text" />

    <EditText
        android:id="@+id/etVehiclePlate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Placa"
        android:inputType="text" />

    <EditText
        android:id="@+id/etVehicleMarcaModelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Marca / Modelo"
        android:inputType="text" />

    <EditText
        android:id="@+id/etVehicleYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Año"
        android:inputType="number" />

    <EditText
        android:id="@+id/etVehicleLastRevision"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha de última revisión técnica"
        android:focusable="false"
        android:clickable="true"
        android:inputType="none" />

    <Button
        android:id="@+id/btnSaveVehicle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Guardar" />

</LinearLayout>
